import java.util.Scanner;

public class Quiz5 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		int peopleCount = sc.nextInt(); // 주어진 명수
		int OraginalPeoPleCount = peopleCount;
		int BigBuscnt = 0; // 필요한 45인승 버스 수
		int SmallBuscnt = 0; // 필요한 25인승 버스 수

		int[] arr = { 25, 45 };

		if (peopleCount % arr[0] == 0) {
			// 25인승 버스만 필요할 때
			SmallBuscnt += peopleCount / arr[0];
			System.out.println("" + peopleCount + " : " + BigBuscnt + " " + SmallBuscnt);

		} else if (peopleCount % arr[1] == 0) {
			// 45인승 버스만 필요할 때
			BigBuscnt += peopleCount / arr[1];
			System.out.println("" + peopleCount + " : " + BigBuscnt + " " + SmallBuscnt);

		} else {
			// 계산이 필요할 때
			while (true) {

				if (peopleCount > arr[1]) {

					BigBuscnt += peopleCount / arr[1];
					peopleCount = peopleCount % arr[1];
					
					if(peopleCount % arr[0] == 0 || peopleCount == arr[0] ) {
						SmallBuscnt += peopleCount / arr[0];
						System.out.println("" + OraginalPeoPleCount + " : " + BigBuscnt + " " + SmallBuscnt);
						break;
					}
					
					else if (peopleCount > arr[0] && peopleCount < arr[1]) {
						BigBuscnt++;
						System.out.println("" + OraginalPeoPleCount + " : " + BigBuscnt + " " + SmallBuscnt);
						break;
					}

					if (peopleCount < arr[0]) {
						SmallBuscnt++;
						System.out.println("" + OraginalPeoPleCount + " : " + BigBuscnt + " " + SmallBuscnt);
						break;

					}
				}
			}

		}

	}
}
